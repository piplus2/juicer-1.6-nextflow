singularity {
    enabled    = true
    autoMounts = true
    cacheDir   = params.singularity_cache_dir ?: null
}

docker {
    enabled = false
}

conda {
    enabled = false
}

process {
    withLabel: 'bwa' {
        container = 'docker://pinglese6022/bwa-mem2:2.3'
    }

    withLabel: 'samtools' {
        container = 'docker://staphb/samtools:1.22.1'
    }
}